<!DOCTYPE html>
<html>
<head>
  <title>TokboxStream</title>

  <%= Gon::Base.render_data %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">TokBoxStream</a>
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <%= link_to 'Streams', streams_path, class: 'nav-link' %>
      </li>
    </ul>
    <ul class="nav navbar-nav pull-xs-right">

      <% if signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign out (#{current_user.email})", destroy_user_session_path, class: 'nav-link', method: 'delete' %>
          </li>
      <% else %>
          <li class="nav-item">
          <span class="nav-link">
              <%= link_to "Sign Up", new_user_registration_path, class: '' %>
            or <%= link_to "Sign in", new_user_session_path, class: '' %>
            </span>
          </li>
      <% end %>

    </ul>
  </div>
</nav>

<div class="container">
  <%= flash_messages %>

  <%= yield %>
</div>

</body>
</html>
